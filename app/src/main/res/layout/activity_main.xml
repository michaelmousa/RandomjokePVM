<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MainActivity">

    <Button
            android:text="ShowRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRandom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="163dp" android:layout_marginStart="163dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp" app:layout_constraintHorizontal_bias="0.914"
            android:layout_marginTop="45dp" app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="274dp"

            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/btnRandom" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="119dp"/>

</android.support.constraint.ConstraintLayout>